
@{
    ViewBag.Title = "CreateSkill";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Yeni Yetenek Ekleme Sayfası</h2>

<form method="post">

    <label>Yetenek Başlığı</label>
    <input type="text" name="SkillName" required maxlength="20" class="form-control" />
    <br />

    <label>Yetenek Derecesi</label>
    <input type="text" name="Rate" required class="form-control" />
    <br />

    <label>Yetenek İkonu</label>
    <input type="text" name="Icon" required maxlength="60" class="form-control" />
    <br />

    <button class="btn btn-info">Yeteneği Ekle</button>
</form>