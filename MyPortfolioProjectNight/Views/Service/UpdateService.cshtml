@model MyPortfolioProjectNight.Models.Service
@{
    ViewBag.Title = "UpdateService";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Hizmet Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x=> x.ServiceId)

    <label>Hizmet Başlığı</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Hizmet Açıklaması</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>Hizmet İkonu</label>
    @Html.TextAreaFor(x => x.Ikon, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Hizmet Bilgilerini Güncelle</button>
</form>