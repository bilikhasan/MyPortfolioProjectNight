﻿@model MyPortfolioProjectNight.Models.Category

@{
    ViewBag.Title = "CreateCategory";
    Layout = "~/Views/Admin/Index.cshtml";
}

@*<link href="~/Content/bootstrap.min.css" rel="stylesheet" />*@

<h2 class="mb-4">Yeni Kategory Ekleme Sayfası</h2>

<form method="post">
    <label>Kategori Adı</label>
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Kategori Oluştur</button>
</form>