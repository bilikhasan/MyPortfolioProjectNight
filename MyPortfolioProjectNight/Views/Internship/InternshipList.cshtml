@model List<MyPortfolioProjectNight.Models.Internship>
@{
    ViewBag.Title = "InternshipList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Staj Listesi ve İşlemleri</h2>
<br />
<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Şirket Adı</th>
        <th>Başlangıç Tarihi</th>
        <th>Bitiş Tarihi</th>
        <th>Pozisyon</th>
        <th>Açıklama</th>
        <th>Danışman</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.InternshipID</td>
            <td>@item.CompanyName</td>
            <td>@item.StartDate</td>
            <td>@item.EndDate</td>
            <td>@item.Position</td>
            <td>@item.Description</td>
            <td>@item.SupervisorName</td>
            <td><a href="/Internship/UpdateInternship/@item.InternshipID" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Internship/DeleteInternship/@item.InternshipID" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>


<a href="/Internship/CreateInternship/" class="btn btn-info">Yeni Staj Ekleme</a>