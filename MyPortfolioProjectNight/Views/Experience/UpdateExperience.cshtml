@model MyPortfolioProjectNight.Models.Experience

@{
    ViewBag.Title = "UpdateExperience";
    Layout = "~/Views/Admin/Index.cshtml";
}

//UPDATE sayfası CREATE sayfası ile birebir aynı. SADECE     @Html.HiddenFor(x => x.ExperienceId)  EKLENİR.

<h2 class="mb-4">Deneyim Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x => x.ExperienceId)
    <label> Deneyim Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Deneyim Alt Başlığı</label>
    @Html.TextBoxFor(x => x.SubTitle, new { @class = "form-control" })
    <br />
    <label> Deneyim Açıklaması</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Deneyim Güncelle</button>
</form>


