@model MyPortfolioProjectNight.Models.Experience
@{
    ViewBag.Title = "CreateExperience";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Yeni Deneyim Ekleme Sayfası</h2>

<form method="post">
    <label> Deneyim Başlık</label>
    @Html.TextBoxFor(x => x.Title, new {@class ="form-control"})
    <br />
    <label>Deneyim Alt Başlığı</label>
    @Html.TextBoxFor(x => x.SubTitle, new { @class = "form-control" })
    <br />
    <label> Deneyim Açıklaması</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Deneyim Oluştur</button>
</form>


